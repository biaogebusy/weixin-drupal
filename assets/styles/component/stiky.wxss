
.stiky {
  position: relative;
  width: 710rpx;
  height: 394rpx;
  overflow: hidden;
  padding-top: 72rpx;
  margin-bottom: 40rpx;
  border-radius: 8rpx;
}

.stiky .badge {
  right: 0;
  background-color: #e64340;
  font-size: 12px;
  border-top-right-radius: 2px;
  border-bottom-left-radius: 16rpx;
  padding: 10rpx;
}

.stiky image {
  width: 750rpx;
  height: 420rpx;
  border-radius: 8rpx;
}

.stiky .badge {
  right: 0;
}

.stiky .stiky-inner {
  top: auto;
  right: 0;
  bottom: 0;
  left: 0;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.2) 75%, rgba(0, 0, 0, 0.3) 100%);
}

.stiky-inner-footer {
  color: #ddd;
}
