.stiky {
  position: relative;
  width: 710rpx;
  height: 394rpx;
  overflow: hidden;
  margin-top: 72rpx;
  margin-bottom: 40rpx;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 2rpx -2rpx rgba(0, 0, 0, 0.2),                
  0 2rpx 2rpx 0 rgba(0, 0, 0, 0.14),                
  0 2rpx 6rpx 0 rgba(0, 0, 0, 0.12);
}

.stiky .badge {
  right: 0;
  background-color: #e64340;
  font-size: 12px;
  border-top-right-radius: 2px;
  border-bottom-left-radius: 16rpx;
  padding: 10rpx;
}

.stiky image {
  width: 750rpx;
  height: 420rpx;
  border-radius: 8rpx;
}

.stiky .badge {
  right: 0;
}

.stiky .stiky-inner {
  top: auto;
  right: 0;
  bottom: 0;
  left: 0;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.35) 50%, rgba(0, 0, 0, 0.7) 100%);
}

.stiky .stiky-inner h2 {
  margin-bottom: 0;
  max-width: 100%;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: bottom;
}

.stiky-inner-footer {
  color: #fff;
  font-size: small;
}
