/* pages/me/me.wxss */
@import '/assets/styles/index.wxss';

.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 37rpx 27rpx;
  padding: 40rpx;
  background: #fff;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}

.empty-image {
  margin-bottom: 29rpx;
  width: 90rpx;
  height: 90rpx;
}

.empty-text {
  font-size: 28rpx;
  line-height: 40rpx;
}

.login-btn {
  margin-top: 45vh;
}

.info {
  border-left: 4px solid #27b06e;
  padding-left: 10px;
}

.info p {
  margin-bottom: 10px;
}
