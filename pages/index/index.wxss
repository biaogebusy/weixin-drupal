@import '/assets/styles/index.wxss';

.list {
  display: flex;
  align-items: center;
  place-content: center space-between;
}

.list .list-left {
  display: flex;
  flex-direction: column;
}

.list .list-info {
  font-size: 28rpx;
  line-height: 1.4;
}

.list .list-right {
  width: 182rpx;
  flex: 0 0 96px;
  line-height: 0;
}

.list .list-right image {
  width: 182rpx;
  height: 120rpx;
}

.stiky {
  position: relative;
  width: 710rpx;
  height: 342rpx;
}

.stiky .badge {
  right: 0;
  background-color: #e64340;
  font-size: 12px;
  border-top-right-radius: 2px;
  border-bottom-left-radius: 16rpx;
  padding: 10rpx;
}

.stiky image {
  width: 100%;
  height: 100%;
}

.stiky .badge {
  right: 0;
}

.stiky .stiky-inner {
  top: auto;
  right: 0;
  bottom: 0;
  left: 0;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.2) 75%, rgba(0, 0, 0, 0.3) 100%);
}

.stiky-inner-footer {
  color: #ddd;
}
